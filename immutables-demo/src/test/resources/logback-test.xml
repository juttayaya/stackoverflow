<?xml version="1.0" encoding="UTF-8" ?>
<!--
Obtained from
https://github.com/qos-ch/logback/blob/master/logback-examples/src/main/resources/chapters/configuration/
-->
<configuration>
  <appender name="STDOUT"
    class="ch.qos.logback.core.ConsoleAppender">
    <!-- encoders are assigned by default the type
         ch.qos.logback.classic.encoder.PatternLayoutEncoder -->
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} %-5level %logger{21} - %msg%n</pattern>
    </encoder>
  </appender>

  <root level="info">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>